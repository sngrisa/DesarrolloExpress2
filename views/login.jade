extends ./layout2
block contenido2
    form(action='/sessions', method='POST')
        div(class="bg-white col-sm-5 text-center container pt-3")
            img(src="https://www.intralinks.com/sites/default/files/styles/resource_sidebar_image/public/sb_img/grisoft.png?itok=ye3HJ8F4")
            br
            br
            h5 Ingrese su Email y su Contraseña
            br
            label(for="email") Email:
            br
            input(type="email" id="email" name="email" placeholder="Ingrese su correo electronico" class="form-control" required)
            br
            label(for="password") Contraseña:
            br
            input(type="password" id="password" name="password" placeholder="Ingrese su contraseña" required class="form-control")
            br
            br
            input(type="submit" value="Iniciar Sesion" class="btn btn-primary form-control text-white")
            br
            br
            a.btn(href="/alta" class="btn btn-secondary form-control") No tengo cuenta, registrarse
            br
            div(class="text-black pt-3")
